<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.2"/>
  <template class="Disk" parent="GtkToggleButton">
    <style>
      <class name="disk"/>
      <class name="flat"/>
    </style>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="valign">fill</property>
        <property name="halign">fill</property>
        <child>
          <object class="GtkImage" id="DiskType">
            <property name="icon-name">drive-harddisk-symbolic</property>
            <property name="pixel-size">100</property>
            <property name="margin-bottom">5</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="DiskName">
            <property name="label">Disk name</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="DiskSize">
            <property name="label">Disk size</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
